
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<script src="~/lib/jquery/dist/jquery.min.js"></script>
 

@model IEnumerable<SampleCore.Core.Model.Student>

@{
    ViewData["Title"] = "Home Page";
}
   <style>

 a {
        text-decoration: none;
        color: white;
    }

        a:hover {
            color: black;
        }

    body {
        background-image: url('https://img.freepik.com/free-vector/3d-perspective-style-diamond-shape-white-background_1017-27556.jpg?w=2000');
        background-repeat: no-repeat;
        background-size: cover;
    }
    </style>
   
   <h1>List of students</h1>
  
 <button class="btn btn-primary" style="float:right;background-color:orange;border:none">@Html.ActionLink("Create","Index")</button>
        
<table class="table table-bordered table-striped" >
    <thead>
        <tr>
             <th >
                @Html.DisplayNameFor(model => model.StudentID)

            </th>
            <th >
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            
            <th >
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.department)
            </th>
             <th >
                @Html.DisplayNameFor(model => model.age)
            </th>
             <th >
                @Html.DisplayNameFor(model => model.JoiningYear)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Class)
            </th>

            <th >
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
     
           
          <th > </th>
        </tr> </thead>
        <tbody>
      
            @foreach (var i in Model)
            {
                <tr>
                    <td >
                        @Html.DisplayFor(model => i.StudentID)
                    </td>

                    <td>
                        @Html.DisplayFor(model => i.FirstName)
                    </td>

                    <td>
                        @Html.DisplayFor(model => i.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => i.department)
                    </td>
                    <td>
                        @Html.DisplayFor(model => i.age)
                    </td>
                    <td>
                        @Html.DisplayFor(model => i.joining)
                    </td>
                    <td>
                        @Html.DisplayFor(model => i.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(model => i.Class)
                    </td>
                    <td>
                        @Html.DisplayFor(model => i.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(model => i.Mobile)
                    </td>
                   
                    <td>
                         @Html.ActionLink("", "Edit", new {id=i.StudentID},
        new{@class="fa fa-edit",title="Edit",style="font-size:24px;color:black;text-decoration:none"}) 



                        <button type="submit" style="border:hidden;background-color:white" 
          onclick="return confirm('Are you sure you want to delete this details:')">  @Html.ActionLink("", "Delete", new {student_id = i.StudentID},
        new{@class="fa fa-trash-o",title="Delete",style="font-size:24px;color:red;"}) </button>
                    </td>
                    </tr>

              
            }

        
      
        </thead>
</table>



      